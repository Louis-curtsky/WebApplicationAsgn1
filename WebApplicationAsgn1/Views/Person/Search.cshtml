@model CreatePersonViewModel
@{
    ViewData["Title"] = "Persons - Search Person Information";
}

<h3>Search Person Information</h3>
<ul class="breadcrumb">
    <li>
        <a asp-action="Create">Add Person</a>
    </li>
    <li>
        <a asp-action="Search">Search Person</a>
    </li>
</ul>
<p> </p>

<div class="inform show">
    <form asp-action="Search" method="post">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" />
        <span asp-validation-for="FirstName"></span>

        <label asp-for="LastName"></label>
        <input asp-for="LastName" />
        <span asp-validation-for="LastName"></span>

        <label asp-for="City"></label>
        <input asp-for="City" list="cityList" />
        <span asp-validation-for="City"></span>

        <button type="submit" class="button">Search Person</button>

        <datalist id="cityList">
            @foreach (string city in Model.CityList)
            {
                <option value="@city">@city</option>
            }
        </datalist>
    </form>
</div>
