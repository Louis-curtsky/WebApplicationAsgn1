@model List<Person>
@{
    ViewData["Title"] = "Person Detail";
}

<h3>Person Detail</h3>
<ul class="breadcrumb">
    <li>
        <a asp-action="Create">Add Person</a>
    </li>
    <li>
        <a asp-action="Searching">Search Person</a>
    </li>
    <li>
        <a asp-action="FindPerson">Find by ID</a>
    </li>
</ul>
<p> </p>
<hr />
<div>
    <div>
        <table class="contact">
            <tr>
                <th>ID Number:</th>
                <td>@Model[0].Id</td>
            </tr>
            <tr>
                <th>First Name:</th>
                <td>@Model[0].FirstName</td>
            </tr>
            <tr>
                <th>Last Name:</th>
                <td>@Model[0].LastName</td>
            </tr>
            <tr>
                <th>Telephone:</th>
                <td>@Model[0].Phone</td>
            </tr>
            <tr>
                <th>Actions</th>
                <td>
                    <a class="btn btn-info" asp-action="Delete" asp-controller="Person" asp-route-id="@Model[0].Id">Delete</a>

                </td>
            </tr>
        </table>
    </div>
</div>

